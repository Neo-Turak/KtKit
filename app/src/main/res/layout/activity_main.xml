<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_cc0000_2dp" />


    <com.github.neoturak.view.ShapeableView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:gradient_endColor="#223344"
        app:gradient_startColor="#123456"
        app:shape_cornerBottomLeft="10dp"
        app:shape_cornerTopRight="10dp"
        app:shape_soldColor="#00cccc"
        app:shape_strokeColor="#2b2b2b"
        app:shape_strokeWidth="2dp" />


    <com.github.neoturak.view.ShapeableView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:shape_cornerTopLeft="15dp"
        app:shape_cornerTopRight="15dp"
        app:shape_soldColor="#00cccc"
        app:shape_strokeColor="#000000" />

    <com.github.neoturak.view.ShapeableButton
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="BOOST NOW"
        android:textColor="#FFF"
        app:shape_cornersRadius="4dp"
        app:shape_soldColor="#3879F0" />


    <com.github.neoturak.view.ShapeableView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:shape_cornersRadius="40dp"
        app:shape_soldColor="#00cccc" />

    <com.github.neoturak.view.ShapeableView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:shape_cornersRadius="40dp"
        app:shape_soldColor="#00cccc"
        app:shape_strokeColor="#000000"
        app:shape_strokeWidth="2dp" />


            <com.github.neoturak.view.ShapeableButton
                android:id="@+id/sb_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text=""
                android:layout_gravity="center"
                app:shape_cornersRadius="20dp"
                app:shape_soldColor="#cc0000"
                app:shape_strokeColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="hola" />

    <com.github.neoturak.view.ShapeableButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hola"
        app:shape_cornersRadius="30dp"
        app:shape_soldColor="#005bab"
        android:layout_marginTop="10dp" />

    <com.github.neoturak.MonthView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="80dp" />

    <com.github.neoturak.view.CircleImageView
        android:id="@+id/civImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        app:civ_border_color="#CC0000"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="#FF000000"
        tools:src="@tools:sample/backgrounds/scenic" />
</LinearLayout>
